{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ES6",
        "target": "ES2021",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "@App/*": [
                "src/*"
            ],
            "@Test/*": [
                "tests/*"
            ]
        }
    },
    "include": [
        "./src/*.ts",
        "./src/**/*.ts",
        "./tests/*.test.ts"
    ]
}
